#ifndef COMPAT_SYS_WAIT_H
#define COMPAT_SYS_WAIT_H

#ifdef __GNUC__
#  pragma GCC system_header
#endif

#if @HAVE_SYS_WAIT_H@
#  include_next <sys/wait.h>
#endif

#include <sys/types.h>

#if !@HAVE_WINDOWS_H@

/* True if the child exited normally. */
#  ifndef WIFEXITED
#    define WIFEXITED(x) (WTERMSIG (x) == 0)
#  endif

/* True if the child exited due to an uncaught signal. */
#  ifndef WIFSIGNALED
#    define WIFSIGNALED(x) (WTERMSIG (x) != 0 && WTERMSIG (x) != 0x7f)
#  endif

/* If WIFEXITED (x) is true, returns the exit status. */
#  ifndef WEXITSTATUS
#    define WEXITSTATUS(x) (((x) >> 8) & 0xff)
#  endif

/* If WIFSIGNALED (x) is true, returns the signal number that caused the
   process to stop. */
#  ifndef WTERMSIG
#    define WTERMSIG(x) ((x) & 0x7f)
#  endif

/* True if the child created a core dump. BSD extension. */
#  ifndef WCOREDUMP
#    define WCOREDUMP(x) ((x) & 0x80)
#  endif

#endif /* !HAVE_WINDOWS_H */

#if @LIBCFUNK_DECLARE_WAITPID@
#  if !@HAVE_WAITPID@
extern pid_t waitpid (pid_t pid, int *stat_loc, int options);
#  endif
#endif

#endif /* COMPAT_SYS_WAIT_H */
