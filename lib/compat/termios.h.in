#ifndef COMPAT_TERMIOS_H
#define COMPAT_TERMIOS_H

#ifdef __GNUC__
#  pragma GCC system_header
#endif

#if @HAVE_TERMIOS_H@
#  include_next <termios.h>
#endif

#include <sys/types.h>
#include <sys/ioctl.h>

#ifndef NCCS
#  define NCCS 32
#endif

#if !@HAVE_CC_T@
typedef unsigned char cc_t;
#endif

#if !@HAVE_SPEED_T@
typedef unsigned int speed_t;
#endif

#if !@HAVE_TCFLAG_T@
typedef unsigned int tcflag_t;
#endif

#if !@HAVE_STRUCT_TERMIOS@
struct termios
{
  tcflag_t c_iflag;
  tcflag_t c_oflag;
  tcflag_t c_cflag;
  tcflag_t c_lflag;
  cc_t c_cc[NCCS];
  speed_t c_ispeed;
  speed_t c_ospeed;
};
#endif

#if @LIBCFUNK_DECLARE_TCGETSID@
#  if !@HAVE_TCGETSID@
extern pid_t tcgetsid (int fd);
#  endif
#endif

#endif /* COMPAT_TERMIOS_H */
