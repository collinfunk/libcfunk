#ifndef COMPAT_LIMITS_H
#define COMPAT_LIMITS_H

#ifdef __GNUC__
#  pragma GCC system_header
#endif

#if @HAVE_LIMITS_H@
#  include_next <limits.h>
#endif

#ifndef CHAR_BIT
#  if defined(__CHAR_BIT__)
#    define CHAR_BIT __CHAR_BIT__
#  elif defined(__SCHAR_WIDTH__)
#    define CHAR_BIT __SCHAR_WIDTH__
#  elif defined(CHAR_WIDTH)
#    define CHAR_BIT CHAR_WIDTH
#  else
#    define CHAR_BIT 8
#  endif
#endif

#ifndef WORD_BIT
#  if defined(__INT_WIDTH__)
#    define WORD_BIT __INT_WIDTH__
#  elif defined(INT_WIDTH)
#    define WORD_BIT INT_WIDTH
#  else
#    define WORD_BIT @INT_WIDTH@
#  endif
#endif

#ifndef LONG_BIT
#  if defined(__LONG_WIDTH__)
#    define LONG_BIT __LONG_WIDTH__
#  elif defined (LONG_WIDTH)
#    define LONG_BIT LONG_WIDTH
#  else
#    define LONG_BIT @LONG_WIDTH@
#  endif
#endif

#ifndef CHAR_WIDTH
#  define CHAR_WIDTH CHAR_BIT
#endif

#ifndef SCHAR_WIDTH
#  define SCHAR_WIDTH CHAR_WIDTH
#endif

#ifndef SHRT_WIDTH
#  if defined(__SHRT_WIDTH__)
#    define SHRT_WIDTH __SHRT_WIDTH__
#  else
#    define SHRT_WIDTH @SHRT_WIDTH@
#  endif
#endif

#ifndef INT_WIDTH
#  define INT_WIDTH WORD_BIT
#endif

#ifndef LONG_WIDTH
#  define LONG_WIDTH LONG_BIT
#endif

#ifndef LLONG_WIDTH
#  if defined(__LONG_LONG_WIDTH__)
#    define LLONG_WIDTH __LONG_LONG_WIDTH__
#  else
#    define LLONG_WIDTH @LONG_LONG_WIDTH@
#  endif
#endif

#ifndef UCHAR_WIDTH
#  define UCHAR_WIDTH SCHAR_WIDTH
#endif

#ifndef USHRT_WIDTH
#  define USHRT_WIDTH SHRT_WIDTH
#endif

#ifndef UINT_WIDTH
#  define UINT_WIDTH INT_WIDTH
#endif

#ifndef ULONG_WIDTH
#  define ULONG_WIDTH LONG_WIDTH
#endif

#ifndef ULLONG_WIDTH
#  define ULLONG_WIDTH LLONG_WIDTH
#endif

#ifndef SCHAR_MAX
#  ifdef __SCHAR_MAX__
#    define SCHAR_MAX __SCHAR_MAX__
#  else
#    define SCHAR_MAX 0x7f
#  endif
#endif

#ifndef SHRT_MAX
#  ifdef __SHRT_MAX__
#    define SHRT_MAX __SHRT_MAX__
#  else
#    define SHRT_MAX 0x7fff
#  endif
#endif

#ifndef INT_MAX
#  ifdef __INT_MAX__
#    define INT_MAX __INT_MAX__
#  else
#    define INT_MAX 0x7fffffff
#  endif
#endif

#ifndef LONG_MAX
#  ifdef __LONG_MAX__
#    define LONG_MAX __LONG_MAX__
#  elif LONG_WIDTH == 4
#    define LONG_MAX 0x7fffffffL
#  elif LONG_WIDTH == 8
#    define LONG_MAX 0x7fffffffffffffffL
#  endif
#endif

#ifndef LLONG_MAX
#  ifdef __LONG_LONG_MAX__
#    define LLONG_MAX __LONG_LONG_MAX__
#  elif LLONG_WIDTH == 4
#    define LLONG_MAX 0x7fffffffLL
#  elif LLONG_WIDTH == 8
#    define LLONG_MAX 0x7fffffffffffffffLL
#  endif
#endif

#ifndef UCHAR_MAX
#  if SCHAR_MAX == INT_MAX
#    define UCHAR_MAX (SCHAR_MAX * 2U + 1U)
#  else
#    define UCHAR_MAX (SCHAR_MAX * 2 + 1)
#  endif
#endif

#ifndef USHRT_MAX
#  if SHRT_MAX == INT_MAX
#    define USHRT_MAX (SHRT_MAX * 2U + 1U)
#  else
#    define USHRT_MAX (SHRT_MAX * 2 + 1)
#  endif
#endif

#ifndef UINT_MAX
#  define UINT_MAX (INT_MAX * 2U + 1U)
#endif

#ifndef ULONG_MAX
#  define ULONG_MAX (LONG_MAX * 2UL + 1UL)
#endif

#ifndef ULLONG_MAX
#  define ULLONG_MAX (LLONG_MAX * 2ULL + 1ULL)
#endif

#ifndef SCHAR_MIN
#  define SCHAR_MIN (-SCHAR_MAX - 1)
#endif

#ifndef SHRT_MIN
#  define SHRT_MIN (-SHRT_MAX - 1)
#endif

#ifndef INT_MIN
#  define INT_MIN (-INT_MAX - 1)
#endif

#ifndef LONG_MIN
#  define LONG_MIN (-LONG_MAX - 1L)
#endif

#ifndef LLONG_MIN
#  define LLONG_MIN (-LLONG_MAX - 1LL)
#endif

#ifndef CHAR_MAX
#  if !defined(__CHAR_UNSIGNED__) && !@CHAR_IS_UNSIGNED@
#    define CHAR_MAX SCHAR_MAX
#  else
#    define CHAR_MAX UCHAR_MAX
#  endif
#endif

#ifndef CHAR_MIN
#  if !defined(__CHAR_UNSIGNED__) && !@CHAR_IS_UNSIGNED@
#    define CHAR_MIN SCHAR_MIN
#  elif SCHAR_MAX == INT_MAX
#    define CHAR_MIN 0U
#  else
#    define CHAR_MIN 0
#  endif
#endif

#ifndef LONG_LONG_MAX
#  define LONG_LONG_MAX LLONG_MAX
#endif

#ifndef ULONG_LONG_MAX
#  define ULONG_LONG_MAX ULLONG_MAX
#endif

#ifndef LONG_LONG_MIN
#  define LONG_LONG_MIN ULLONG_MIN
#endif

#ifndef BOOL_WIDTH
#  define BOOL_WIDTH 1
#endif

#ifdef SSIZE_MAX
#  if INT_WIDTH == @SSIZE_WIDTH@
#    define SSIZE_MAX INT_MAX
#  elif LONG_WIDTH == @SSIZE_WIDTH@
#    define SSIZE_MAX LONG_MAX
#  elif LLONG_WIDTH == @SSIZE_WIDTH@
#    define SSIZE_MAX LLONG_MAX
#  endif
#endif

#ifndef MB_LEN_MAX
#  define MB_LEN_MAX 16
#endif

#endif /* COMPAT_LIMITS_H */
