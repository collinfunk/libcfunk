#define CONFIG_H

#include <sys/types.h>

#cmakedefine01 HAVE_STRCHRNUL
#cmakedefine01 HAVE_STRMODE
#cmakedefine01 HAVE_EXPLICIT_BZERO
#cmakedefine01 HAVE_MEMSET_EXPLICIT
#cmakedefine01 HAVE_SECUREZEROMEMORY
